	    <ImageView
	        android:id="@+id/wine_image"
	        android:layout_width="150dp"
	        android:layout_height="300dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="false"
	        android:layout_alignParentTop="true"
	        android:layout_gravity="center|right"
	        android:adjustViewBounds="false"
	        android:contentDescription="@string/wine_description"
	        android:cropToPadding="true"
	        android:scaleType="fitStart"
	        android:src="@drawable/vegaval" />

	    <TextView
	        android:id="@+id/wine_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/wine_image"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/wine_image"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@android:color/white" />

	    <TextView
	        android:id="@+id/wine_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/wine_name"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/wine_name"
	        android:layout_marginTop="0dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#aaffffff" />

	    <TextView
	        android:id="@+id/wineHouse"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/wine_type"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/wine_type"
	        android:layout_marginTop="0dp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#aaffffff" />
	    
	    <RatingBar
	        android:id="@+id/rating"
	        style="?android:attr/ratingBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/wineHouse"
	        android:layout_below="@+id/wineHouse"
	        android:isIndicator="true"
	        android:numStars="5" />

	    <ScrollView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/wine_image"
	        android:layout_marginTop="16dp"
	        android:background="#ffffff" >
	    	<TextView
	        	android:id="@+id/wine_notes"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:textAppearance="?android:attr/textAppearanceMedium"
	        	android:textSize="12sp"
	        	android:padding="8dp" />
	    </ScrollView>

	    <LinearLayout
	        android:id="@+id/grapes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/wine_image"
	        android:layout_alignLeft="@+id/wineHouse"
	        android:layout_alignRight="@+id/wineHouse"
	        android:layout_below="@+id/rating"
	        android:orientation="vertical" >
	    </LinearLayout>
	
</RelativeLayout>